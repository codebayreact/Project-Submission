<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/parent_layout_fruit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_fruit"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:contentDescription="@string/gambar_buah"
        android:src="@drawable/anggur"/>

    <TextView
        android:id="@+id/tv_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_26sdp"
        android:layout_toEndOf="@id/iv_fruit"
        android:layout_toRightOf="@id/iv_fruit"
        android:text="@string/nama_buah"
        android:textColor="#000"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/tv_description_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fruit"
        android:layout_toEndOf="@id/iv_fruit"
        android:layout_marginTop="@dimen/_60sdp"
        android:text="@string/nama_deskripsi_buah"
        android:textSize="@dimen/_11ssp"
        android:textColor="#000"/>
</RelativeLayout>