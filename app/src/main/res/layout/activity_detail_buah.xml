<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailBuahActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/_100sdp"
            tools:ignore="UselessLeaf,UselessParent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_detail_fruit"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/anggur"/>

            <TextView
                android:id="@+id/tv_detail_fruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_buah"
                android:textColor="#000"
                android:textSize="@dimen/_30ssp"/>

            <TextView
                android:id="@+id/tv_detail_description_fruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="@string/nama_deskripsi_buah"
                android:textSize="@dimen/_15ssp"
                android:textColor="#000"
                android:textAlignment="center"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>